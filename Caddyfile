snowcapsystems.com, www.snowcapsystems.com {
	root * /var/www/snowcap
	file_server
}

lucyapi.snowcapsystems.com {
	header Cache-Control "no-store, no-cache, must-revalidate, max-age=0"
	header Pragma "no-cache"

	handle_path /nanoimages/* {
		root * /opt/lucyapi/output/images
		file_server
	}

	handle {
		reverse_proxy localhost:8100
	}
}

webfetch.snowcapsystems.com {
	reverse_proxy localhost:8200
}
